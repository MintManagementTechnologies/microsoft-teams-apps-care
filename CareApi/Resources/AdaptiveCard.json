{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Default",
      "weight": "Default",
      "text": "${title}",
      "fontType": "Default"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "${subject}",
              "wrap": true,
              "color": "Good",
              "size": "Large"
            },
            {
              "type": "TextBlock",
              "text": "${subtitle}",
              "wrap": true,
              "size": "Small"
            }
          ]
        }
      ]
    },
    {
      "type": "FactSet",
      "facts": "${factset}"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "${footer}",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": "${actionset}",
      "spacing": "None",
      "horizontalAlignment": "Right"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3"
}