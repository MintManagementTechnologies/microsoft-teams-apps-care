{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Default",
      "weight": "Default",
      "text": "${title}",
      "fontType": "Default"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "${content}",
              "wrap": true,
              "size": "Default"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": "${actionset}",
      "spacing": "None",
      "horizontalAlignment": "Left"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3"
}